<%#= render '/refinery/content_page' %>
<section id="top">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>Welcome to TIME Sport USA</h1>      
      </div>
    </div>
    <div class="row col-centered" style="margin:0 auto;border:0px solid blue;">
      <div class="col-lg-8 col-lg-offset-2 col-md-offset-1 col-md-10 text-center" style="border:0px solid red;text-align:center;">
        <div class="row">
          <div class='col-xs-4 col-md-4 text-center tri-nav'>
            <h2>Technologies</h2>
            <%= image_tag 'top-AKTIV.png', class: 'img-responsive img-circle' %>
          </div>
          <div class='col-xs-4 col-md-4  text-center tri-nav'>
            <h2>Bikes/Frames</h2>
            <%= image_tag 'top-bike-4.png', class: 'img-responsive img-circle' %>
          </div>
          <div class='col-xs-4 col-md-4 text-center tri-nav'>
            <h2>Pedals</h2>
            <%= image_tag 'top-pedal.png', class: 'img-responsive img-circle' %>
          </div>
        </div>
      </div>
    </div>

    <div class="row" id="top-made-in-france">
      <div class="col-lg-4 col-lg-offset-4 col-xs-4 col-xs-offset-4 text-center">
        <h3>Made in France</h3>
        <%= image_tag 'made-in-france-bars.png', class: 'img-responsive', width: '200' %>
        <a href="#made-in-france"><span class="fa fa-chevron-circle-down fa-2x"></span></a>
      </div>
    </div>

  </div>

</section>

<section id="made-in-france">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-3 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-12 text-center " id="headline">
        <h1>Made in France</h1>
        <%= image_tag 'made-in-france-bars.png', class: 'img-responsive col-centered', width: '200' %>
      </div>
      <div class="col-lg-7 col-md-7 col-md-offset-0 col-sm-8 col-sm-offset-2" id="description">
        <p>Yes, Oui! Made in France. Our carbon fiber frames start out as, well, fiber. We weave our own carbon fabric, controlling each strand. Our RTM process, also in-house, fuses the resin with the fabric in exact thickness. The inside of our frames look as good as the outside.</p>
        <h3 class="">
          <a href="#bikes-frames-feature">See what's new for 2015 <span class="fa fa-chevron-circle-down "></span></a>
        </h3>
      </div>
    </div>
  </div>
</section>




<section id="bikes-frames-feature">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 text-center">
      <h1>What's new for 2015</h1>

        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @home_bikes.each_with_index do |bike, index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" >

            <% @home_bikes.each_with_index do |bike, index| %>
            <div class="item <% if index == 0 %>active<% end %>">
              <div class="col-lg-9 col-sm-9 red-border1" id="home-bike-image"> 

                <%= image_tag bike[:bike_image], alt: bike[:bike_headline], class: 'img-responsive' %>
              </div>
              <div class="col-lg-3 col-sm-3 col-sm-offset-0 col-xs-4 col-xs-offset-4 red-border1 text-center" id="home-bike-logo">
                <%= image_tag bike[:bike_logo], class: 'img-responsive text-left' %>
                <h3><%= link_to "See the 2015 #{bike[:bike_headline]}", bike[:bike_url] %></h3>
              </div>
              <div class="col-lg-3 col-sm-3 col-xs-6 dhidden-xs red-border1" id="home-bike-bg">
                <%= image_tag bike[:bike_bg] %>
              </div>
            </div>
            <% end %>
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="fa fa-angle-left fa-4x"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="fa fa-angle-right fa-4x"></span>
          </a>
        </div>

        </div>
    </div>

  </div>
</section>

<section>  
  <div class="container">
  <div class="row">
      <div class="col-lg-4 col-lg-offset-4 text-center" style="margin-top:-30px;">
